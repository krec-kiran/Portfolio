<h1>Portfolio items</h1>

<%= link_to "Create New Item", new_biodatum_path %>

<% @portfolio_item.each do | portfolio_item | %>
  <p><%= link_to portfolio_item.title, biodatum_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
  <%= link_to "Edit", edit_biodatum_path(portfolio_item) %>
  <%= link_to 'Destroy', biodatum_path(portfolio_item) , method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
